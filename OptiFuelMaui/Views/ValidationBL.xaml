<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OptiFuelMaui.ViewModels"
             x:Class="OptiFuelMaui.Views.ValidationBL"
             Title="">
    <ContentPage.BindingContext>
        <vm:ValidationPageViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <StackLayout Padding="20"  Spacing="20">
            <Label Text="Validation BL"
            FontSize="Large"
            HorizontalOptions="Center"
            Margin="20"  FontAttributes="Bold"/>
            <StackLayout Orientation="Horizontal"  HorizontalOptions="StartAndExpand" Padding="15" Spacing="10"  WidthRequest="200" HeightRequest="96">
                <Frame  CornerRadius="100"   HorizontalOptions="StartAndExpand">
            <!-- Date -->
            <Label Text="{Binding SelectedPlanning.Date, StringFormat=' {0:MM/dd/yyyy}'}"
               FontSize="Large"
               HorizontalOptions="CenterAndExpand" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
        </Frame>
            </StackLayout>
            <Frame  CornerRadius="100"   HorizontalOptions="CenterAndExpand" HeightRequest="70" WidthRequest="200">

            <!-- Quantité prévue à livrer -->
            <Label Text="{Binding SelectedPlanning.QuantiteALivrer, StringFormat='Qte prévue: {0}'}"
               FontSize="Medium"
               HorizontalOptions="CenterAndExpand"  FontAttributes="Bold"/>
        </Frame>
        
        <StackLayout  Orientation="Horizontal"  HorizontalOptions="StartAndExpand" Padding="15" Spacing="10">
           <!-- Capture BL Button -->
                <ImageButton  Source="camera.jpg"
                              Command="{Binding CaptureBLCommand}" BackgroundColor="MediumAquamarine" WidthRequest="60" HeightRequest="50"/>
                <Label Text=" BL" VerticalOptions="Center" FontAttributes="Bold" />
            </StackLayout>
            <Image Source="{Binding blImage}" WidthRequest="100" HeightRequest="100"/>
            <StackLayout  Orientation="Horizontal"  HorizontalOptions="StartAndExpand" Padding="15" Spacing="10">
          <!-- Capture Certificat Button -->
                <ImageButton  Source="camera.jpg"
                Command="{Binding CaptureCertificatCommand}" BackgroundColor="MediumAquamarine" WidthRequest="60" HeightRequest="50"/>
                <Label Text="Certificat" VerticalOptions="Center" FontAttributes="Bold" />
            </StackLayout>
            <Image Source="{Binding certificatImage}" WidthRequest="100" HeightRequest="100"/>
            <Entry Placeholder="Code G" Text="{Binding CommissionMembers[0].CodeG}"/>
            <Frame BackgroundColor="MediumAquamarine" Padding="10" HeightRequest="50" WidthRequest="200">
            <!-- Confirmer Button -->
            <Button Text="Confirmer"
                    TextColor="Black"
                    Command="{Binding ConfirmCommand}"  BackgroundColor="MediumAquamarine" CornerRadius="20" FontAttributes="Bold"  HeightRequest="60"/>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>