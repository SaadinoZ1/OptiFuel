<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OptiFuelMaui.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:OptiFuelMaui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="OptiFuel">

   
    <TabBar>
        <Tab Title="Home" Icon="home_icone.png">
            <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate views:PlanningPage}"
    Route="MainPage" />
        </Tab>
        <Tab Title="Add Planning" Icon="calendar.png">
            <ShellContent
    Title="Add Planning"
    ContentTemplate="{DataTemplate views:AddPlanning}"
    Route="AddPlanning" />
        </Tab>
        <Tab Title="Validation BL" Icon="validation.png">
            <ShellContent
    Title="Validation BL"
    ContentTemplate="{DataTemplate views:ValidationBL}"
    Route="ValidationBL" />
        </Tab>
    </TabBar>
    <ShellContent
Title="Edit Planning"
ContentTemplate="{DataTemplate views:EditPlanningPage}"/>
</Shell>
